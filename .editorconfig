root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
tab_width                = 8
indent_style             = tab
indent_size              = tab

[*.{md,nix,toml,yml,yaml}]
indent_style = space
indent_size  = 2

[*.py]
indent_style = space
indent_size  = 4

[{*.sh,.envrc}]
binary_next_line    = true
functiion_next_line = true
space_redirects     = true
